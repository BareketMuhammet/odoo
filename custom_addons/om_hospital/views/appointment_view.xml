<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hospital_appointment_action" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <h1>No data yet!</h1>
        </field>
    </record>


    <menuitem
            id="menu_appointment"
            name="Appointment"
            action="hospital_appointment_action"
            parent="menu_appointment_master"
            sequence="0"
    />

    <!--Form-->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <field help="bla bla bla" name="status" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="progress,done"/>
                    </header>
                    <group>
                        <field name="priority" widget="priority"/>
                    </group>

                    <group>
                        <group>
                            <field name="patient"/>
                            <field name="gender"/>
                            <field name="appointment_date"/>
                            <field name="ref"/>
                            <button name="object_action_test" string="Object" type="object" class="oe_highlight" confirm="bla bla bla ?"/>
                            <button name="%(om_hospital.hospital_patient_action)d" string="Action" type="action" class="oe_highlight" confirm="bla bla bla ?"/>
                        </group>
                        <group>
                        </group>
                    </group>

                    <notebook>
                        <page string="Page1" name="page1">
                            <group>
                                <field name="ref"/>
                                <field name="appointment_date"/>

                            </group>
                        </page>
                        <page string="Page2" name="page2">
                            <group>
                                <field name="appointment_date"/>
                                <field name="ref"/>
                            </group>
                        </page>
                        <page string="Page3" name="page3">
                            <group>
                                <field name="ref"/>
                                <field name="appointment_date"/>
                                <field name="prescription"/>

                            </group>

                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--    Tree-->
    <record id="view_hospital_appointment_list" model="ir.ui.view">
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="patient"/>
                <field name="gender"/>
                <field name="appointment_date"/>
                <field name="ref"/>
            </tree>
        </field>
    </record>
    <!--Search-->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>
</odoo>